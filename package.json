{
  "private": true,
  "devDependencies": {
    "cz-conventional-changelog": "^2.1.0",
    "lerna": "^2.11.0"
  },
  "scripts": {
    "test": "echo TEST",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run --scope @offcourse/* build",
    "publish": "lerna publish --conventional-commits --yes",
    "release:docs": "cd packages/documentation && npm run publish",
    "postpublish": "npm run release:docs"
  },
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/OffCourse/offcourse-next.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
